@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<table class="table table-bordered">
    <tr>
        <th> KATEGORİ ID </th>
        <th> KATEGORİ ADI </th>
        <th> SİL </th>
        <th> GÜNCELLE </th>

    </tr>
    <tbody>
        @foreach(var ktg in Model) 
            
            {
                <tr>
                    <th>@ktg.KategoriID</th>
                    <td>@ktg.KategoriAd</td>
                    <td><a href="/Kategori/Sil/@ktg.KategoriID" class="btn btn-danger"><i class="fa fa-trash"></i> </a> </td>
                    <td><a href="/Kategori/KategoriGetir/@ktg.KategoriID/" class="btn btn-success"><i class="fa fa-refresh"> </i> </a> </td>
                </tr>

            }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new {sayfa}))

<a href="/Kategori/YeniKategori/" class="btn btn-primary"> YENİ KATEGORİ EKLE </a> 